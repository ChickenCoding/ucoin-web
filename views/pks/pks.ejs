<% layout('submodel.ejs') -%>

<h1>Public keys</h1>
<table class="table table-condensed table-striped">
  <tr>
    <th style="width: 20%;">Name</th>
    <th style="width: 50%;">Comment</th>
    <th style="width: 10%;">Fingerprint</th>
    <th style="width: 20%;">Email</th>
  </tr>
  <% for(var i = 0; i < keys.length; i++){ %>
  <tr>
    <td style="font-family: fixed,courier"><%= keys[i].name %></td>
    <td style="font-family: fixed,courier"><%= keys[i].comment %></td>
    <td style="font-family: fixed,courier">0x<%= keys[i].fingerprint.substring(32) %></td>
    <td style="font-family: fixed,courier"><%= keys[i].email %></td>
  </tr>
  <% } %>
</table>
