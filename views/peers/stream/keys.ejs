<% layout('../submodel.ejs') -%>

<h1><%= subtitle %></h1>
<% for(var k = 0; k < keys.length; k++){ %>
  <% var peers = keys[k].peers %>
  <% var key = keys[k].key %>
  
  <br>
  <h4><%= key %></h4>
  <table class="table table-condensed table-striped">
    <tr>
      <th style="width: 20%;">Peer's key ID</th>
      <th style="width: 30%;">DNS</th>
      <th style="width: 20%;">IPv4</th>
      <th style="width: 20%;">IPv6</th>
      <th style="width: 10%;">Port</th>
    </tr>
    <% for(var i = 0; i < peers.length; i++){ %>
    <% var peer = peers[i] %>
    <tr>
      <td style="font-family: fixed,courier">0x<%= peer.fingerprint.substring(0,16) %></td>
      <td style="font-family: fixed,courier"><%= peer.dns %></td>
      <td style="font-family: fixed,courier"><%= peer.ipv4 %></td>
      <td style="font-family: fixed,courier"><%= peer.ipv6 %></td>
      <td style="font-family: fixed,courier"><%= peer.port %></td>
    </tr>
    <% } %>
  </table>
<% } %>