<!DOCTYPE html>
<html>
  <head>
    <title>ucoin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap -->
    <link href="css/bootstrap.min.css" rel="stylesheet" media="screen">
    <link href="css/bootstrap-glyphicons.css" rel="stylesheet" media="screen">
  </head>
  <body>
    
    <div class="navbar" style="background-color: white; margin-top: 10px;">
      <div class="container">
        <a href="#" class="navbar-brand">ucoin</a>
        <ul class="nav navbar-nav nav-pills">
          <li id="menu-1"><a href="/" class="glyphicon glyphicon-home">&nbsp;&nbsp;Home</a></li>
          <li id="menu-2"><a href="/pks" class="glyphicon glyphicon-user">&nbsp;&nbsp;PKS</a></li>
          <li id="menu-3" class="disabled"><a href="#" class="glyphicon glyphicon-globe">&nbsp;&nbsp;Peers</a></li>
          <li id="menu-4" class="disabled"><a href="#" class="glyphicon glyphicon-list-alt">&nbsp;&nbsp;Contract</a></li>
          <li id="menu-5" class="disabled"><a href="#" class="glyphicon glyphicon-retweet">&nbsp;&nbsp;Transactions</a></li>
        </ul>
        <% if(auth){ %>
          <h3 class="pull-right"><span class="label label-success">signed responses (secure mode)</span></h3>
        <% } else { %>
          <h3 class="pull-right"><span class="label label-warning">unsigned responses (fast mode)</span></h3>
        <% } %>
      </div>
    </div>

    <%- body %>

    <!-- JavaScript plugins (requires jQuery) -->
    <script src="http://code.jquery.com/jquery.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="js/bootstrap.min.js"></script>

    <!-- Enable responsive features in IE8 with Respond.js (https://github.com/scottjehl/Respond) -->
    <!-- <script src="js/respond.js"></script> -->

    <script src="js/global.js"></script>
    <script type="text/javascript">
      $('body').ready(function () {
        var urlMenu = {
          '/': 'menu-1',
          '/pks': 'menu-2',
          '/peers': 'menu-3',
          '/contract': 'menu-4',
          '/tx': 'menu-5'
        };
        var matches = window.location.pathname.match(/^(\/[^\/]*)/g);
        $('#' + (urlMenu[matches[0]] ? urlMenu[matches[0]] : urlMenu['/'])).addClass('active');
      });
    </script>
  </body>
</html>