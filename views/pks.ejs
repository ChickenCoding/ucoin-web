<!DOCTYPE html>
<html>
  <head>
    <title>ucoin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap -->
    <link href="css/bootstrap.min.css" rel="stylesheet" media="screen">
    <link href="css/bootstrap-glyphicons.css" rel="stylesheet" media="screen">
  </head>
  <body>

    <!-- JavaScript plugins (requires jQuery) -->
    <script src="http://code.jquery.com/jquery.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="js/bootstrap.min.js"></script>

    <!-- Enable responsive features in IE8 with Respond.js (https://github.com/scottjehl/Respond) -->
    <!-- <script src="js/respond.js"></script> -->
    
    <div class="navbar" style="background-color: white; margin-top: 10px;">
      <div class="container">
        <a href="#" class="navbar-brand">ucoin</a>
        <ul class="nav navbar-nav nav-pills">
          <li><a href="/" class="glyphicon glyphicon-home">&nbsp;&nbsp;Home</a></li>
          <li class="active"><a href="/pks" class="glyphicon glyphicon-user">&nbsp;&nbsp;PKS</a></li>
          <li class="disabled"><a href="#" class="glyphicon glyphicon-globe">&nbsp;&nbsp;Peers</a></li>
          <li class="disabled"><a href="#" class="glyphicon glyphicon-list-alt">&nbsp;&nbsp;Amendments</a></li>
          <li class="disabled"><a href="#" class="glyphicon glyphicon-retweet">&nbsp;&nbsp;Transactions</a></li>
        </ul>
        <% if(auth){ %>
          <h3 class="pull-right"><span class="label label-success">signed responses (secure mode)</span></h3>
        <% } else { %>
          <h3 class="pull-right"><span class="label label-warning">unsigned responses (fast mode)</span></h3>
        <% } %>
      </div>
    </div>

    <div class="container">
      <div class="row">
        <div class="col-lg-3">
          <div class="nav list-group" style="background-color: #f7f5fa;">
            <a href="#" class="list-group-item active glyphicon glyphicon-search">&nbsp;&nbsp;Lookup</a>
            <a href="#" class="list-group-item glyphicon glyphicon-plus">&nbsp;&nbsp;Add</a>
          </div>
        </div>
        <div class="col-lg-9">
          <h1>Public keys</h1>
          <table class="table">
            <tr>
              <th style="width: 20%;">Name</th>
              <th style="width: 50%;">Comment</th>
              <th style="width: 10%;">Fingerprint</th>
              <th style="width: 20%;">Email</th>
            </tr>
            <% for(var i = 0; i < keys.length; i++){ %>
            <tr>
              <td><%= keys[i].name %></td>
              <td><%= keys[i].comment %></td>
              <td>0x<%= keys[i].fingerprint.substring(32) %></td>
              <td><%= keys[i].email %></td>
            </tr>
            <% } %>
          </table>
        </div>
      </div>
    </div>
  </body>
</html>
